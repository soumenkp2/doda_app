<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateDrawing">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:padding="18dp"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:text="Create New Project"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/circular_blue_outline"
                android:id="@+id/cover_pic"
                android:visibility="gone"
                android:layout_margin="40dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img_parent"
                android:background="@drawable/circular_blue_outline"
                android:layout_margin="40dp">

                <ImageView
                    android:id="@+id/addimg_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/add_plus" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addimg_btn"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Add Cover Image"
                    android:textSize="15sp" />


            </RelativeLayout>

            <View
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="#B8B8B8"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Drawing Details"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Drawing Name"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Name"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/name_txt"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/circular_blue_outline"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Drawing Description"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_semibold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="What is this drawing about?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/desc_txt"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/circular_blue_outline"/>

            </LinearLayout>






            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:text="Add Project"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/add_btn"
                android:layout_marginTop="30dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:background="@drawable/blue_solid_circular"/>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>